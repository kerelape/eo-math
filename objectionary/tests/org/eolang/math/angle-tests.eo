+package org.eolang.math
+alias org.eolang.math.angle
+alias org.eolang.math.pi
+alias org.eolang.math.nan
+junit

[] > phi-equals-to-angle-free-arg
  eq. > @
    angle 42
    42

[] > sin-zero
  eq. > @
    0.0
    (angle 0.0).sin

[] > sin-pi-as-int
  eq. > @
    0
    as-int.
      sin.
        angle pi

[] > sin-pi-div-two
  eq. > @
    1.0
    sin.
      angle
        pi.div 2.0

[] > cos-zero
  eq. > @
    1.0
    cos.
      angle 0.0

[] > cos-pi
  eq. > @
    -1.0
    cos.
      angle pi

[] > cos-pi-div-two-as-int
  eq. > @
    0
    (angle (pi.div 2.0)).cos.as-int

[] > tan-zero
  eq. > @
    0.0
    tan.
      angle 0.0

[] > tan-pi-as-int
  eq. > @
    0
    as-int.
      tan.
        angle pi

[] > ctan-zero-returns-nan
  eq. > @
    nan.as-bytes
    (angle 0.0).ctan.as-bytes

[] > ctan-pi-div-two-as-int
  eq. > @
    0
    (angle (pi.div 2.0)).ctan.as-int

[] > zero-radians-as-degrees
  eq. > @
    0.0
    as-degrees.
      angle 0.0

[] > pi-as-degrees
  eq. > @
    180.0
    as-degrees.
      angle pi

[] > zero-degrees-as-radians
  eq. > @
    0.0
    as-radians.
      angle 0.0

[] > one-eighty-as-radians
  eq. > @
    pi
    as-radians.
      angle 180.0

[] > pi-as-degrees-and-back-as-radians
  eq. > @
    pi
    (angle (angle pi).as-degrees).as-radians

[] > one-eighty-as-radians-and-back-as-degrees
  eq. > @
    180.0
    (angle (angle 180.0).as-radians).as-degrees